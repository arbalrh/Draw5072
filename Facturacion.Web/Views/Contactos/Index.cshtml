
@{
    ViewData["Title"] = "Clientes";
}

@section Styles{
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/data-tables/dataTables.bootstrap4.css" />
        <link rel="stylesheet" href="~/lib/data-tables/responsive.bootstrap4.css" />
        @*<link rel="stylesheet" href="~/lib/data-tables/datatables.css" />*@
        <link rel="stylesheet" href="~/lib/data-tables/dt-global_style.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/pages/clientes/clientes.min.css" />
    </environment>
}

<div id="app-clientes" class="row layout-top-spacing">
    <div class="col-12 layout-spacing">
        <div class="widget-content widget-content-area br-6">
            <div class="table-responsive mb-4 mt-4">
                <table id="grid-clientes" class="table table-sm table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Identificacion</th>
                            <th>Telefono1</th>
                            <th>Telefono2</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>            
        </div>
    </div>
<input id="urlgetclientes" type="hidden" value="@Url.Action("GetClientesGrid", "Contactos")" />
</div>


@section Scripts{
    <environment include="Development">
        <script src="~/lib/data-tables/datatables.js"></script>
        <script src="~/lib/data-tables/dataTables.bootstrap4.js"></script>
        <script src="~/lib/data-tables/responsive.bootstrap4.js"></script>
        <script src="~/js/pages/clientes/clientes.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/pages/clientes/clientes.min.js"></script>
    </environment>
}

